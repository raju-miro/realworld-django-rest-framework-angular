{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@utils": ["utils/index"],
      "@utils/*": ["utils/*"],
      "@pages": ["pages/index"],
      "@pages/*": ["pages/*"],
      "@fixtures": ["fixtures/index"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
